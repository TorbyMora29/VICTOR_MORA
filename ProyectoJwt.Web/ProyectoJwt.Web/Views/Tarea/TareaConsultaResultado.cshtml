@model IList<TareaVm>
<table class="mt-3">
    <tr>
        <th style="width:5%">N°</th>
        <th style="width:25%">Título</th>
        <th style="width:25%">Descripción Tarea</th>
        <th style="width:15%">Fecha Vencimiento</th>
        <th style="width:20%">Es Tarea Completada</th>
        <th style="width:10%" colspan="2">Acciones</th>
    </tr>
    @foreach(var tarea in Model)
    {
        <tr>
            <td>@tarea.Identificador</td>
            <td>@tarea.Titulo</td>
            <td>@tarea.Descripcion</td>
            <td>@tarea.FechaVencimiento.ToDateFormat()</td>
            <td>@tarea.EsCompletada.ToTextFormat()</td>
            <td style="width:5%">
                <button class="btn btn-sm btn-primary" style="width:100%" id="@(tarea.Identificador)|Editar" onclick="ConsultarPorId(this.id)">Editar</button>
            </td>
            <td style="width:5%">
                <button class="btn btn-sm btn-danger" style="width:100%" id="@(tarea.Identificador)|Eliminar" onclick="Eliminar(this.id)">Eliminar</button>
            </td>
        </tr>
    }
</table>

<script src="~/js/Tarea/edit.js"></script>